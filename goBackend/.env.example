# Server Configuration
HTTP_PORT=8080
ENV=development

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=portfolio
DB_SSL_MODE=disable

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-me
JWT_EXPIRATION_HOURS=24

# Service Ports (gRPC)
AUTH_SERVICE_PORT=50051
PROJECT_SERVICE_PORT=50052
TASK_SERVICE_PORT=50053
ANALYTICS_SERVICE_PORT=50054
MEDIA_SERVICE_PORT=50055

# Service URLs (for Gateway)
AUTH_SERVICE_URL=auth-service:50051
PROJECT_SERVICE_URL=project-service:50052
TASK_SERVICE_URL=task-service:50053
ANALYTICS_SERVICE_URL=analytics-service:50054
MEDIA_SERVICE_URL=media-service:50055

# Media Service
# Local path inside the container
STORAGE_PATH=/app/uploads
# Public URL for accessing files
STORAGE_URL=http://localhost:50055/files
